formulas:
  age: published-now()
  Last Modified: ""
views:
  - type: table
    name: Table
    filters:
      and:
        - file.ext == "md"
    order:
      - file.name
      - draft
      - formula.age
      - publish
      - published
      - formula.Last Modified
      - description
    sort:
      - property: publish
        direction: DESC
      - property: formula.age
        direction: ASC
    columnSize:
      formula.age: 139
      note.description: 257
